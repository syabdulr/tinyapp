<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user){ %>
        <span class="mr-2">Logged in as: <%=user.email%></span>
        <form action="/logout" method="POST" class="form-inline mr-2 my-lg-0">
          <button class="btn btn-danger mr-2" type="submit">
            Logout
          </button> 
        </form>
     <% } else { %>
      <div class="form-inline my-2 my-lg-0">
        <!-- Add button and margins to make it look spaced a bit-->
        <a class="btn btn-primary mr-2" href="/login">Login</a>
        <a class="btn btn-primary" href="/register">Register</a>
    </div>
    <% } %>    
    </div>
  </nav>
</header>

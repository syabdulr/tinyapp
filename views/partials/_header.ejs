<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto"> <!--mr-auto makes the form go to the right-->
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user){ %> <!--Check if user.email is present -->
        Logged in as: <%=user.email%> <!-- Display user name -->
        <form action="/logout" method="POST" class="form-inline my-2 my-lg-0">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">
            Logout
          </button> 
        </form>
     <% } else { %> <!-- Check if user.email is not present -->
      <div class="form-inline my-2 my-lg-0">
        <a class="nav-item nav-link" href="/login">Login</a>
        <a class="nav-item nav-link" href="/register">Register</a>
      </div>
      <% } %>
    </div>
  </nav>
</header>
